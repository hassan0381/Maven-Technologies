					  <div class="col-span-6 detailedpage_solutions_subheading_inverse">
						<p>{featured_article_subheading.toUpperCase()}</p>
					  </div>  
					  <div class="col-span-6 detailedpage_solutions_heading">
						<h2>{featured_article_heading}</h2>
					  </div>
					  <div class="col-span-6" style={{paddingLeft:"2.5vmin", minHeight:"7.5vh"}}>
